<app-page id="web-dashboard" title="Dashboard">
  <template slot="bar-right">
    <button v-on:click="onShow()" title="Refresh"><i class="fas fa-sync"></i></button>
    <button v-on:click="onAdd()" title="Add"><i class="fa fa-plus"></i></button>
  </template>
  <article class="tiles">
    <div class="tile" v-for="tile in tiles">
      <div class="bar">
        <span>{{ tile.title }}</span>
      </div>
      <span class="tile-value">{{ tile.value }}</span>
    </div>
