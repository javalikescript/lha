{
  "name": "Open Weather Map",
  "description": "Open Weather Map",
  "version": "2.0",
  "script": "owm.lua",
  "schema": {
    "type": "object",
    "properties": {
      "apiUrl": {
        "title": "API URL",
        "type": "string",
        "pattern": "^https?://.+/$",
        "default": "http://api.openweathermap.org/data/2.5/"
      },
      "apiKey": {
        "title": "API key",
        "type": "string",
        "writeOnly": true,
        "required": true
      },
      "latitude": {
        "title": "Latitude",
        "type": "number",
        "default": 49.181,
        "minimum": -90,
        "maximum": 90,
        "required": true
      },
      "longitude": {
        "title": "Longitude",
        "type": "number",
        "default": -0.370,
        "minimum": -180,
        "maximum": 180,
        "required": true
      },
      "units": {
        "default": "metric",
        "enum": [
          "standard",
          "metric",
          "imperial"
        ],
        "title": "Units of measurement",
        "type": "string"
      },
      "lang": {
        "title": "language",
        "type": "string",
        "pattern": "^%a%a_?%a*$"
      },
      "maxPollingDelay": {
        "title": "Minimum Call Interval in seconds",
        "type": "integer",
        "default": 600,
        "minimum": 0,
        "maximum": 86400
      }
    }
  }
}