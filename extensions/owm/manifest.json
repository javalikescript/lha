{
  "name": "Open Weather Map",
  "description": "Open Weather Map",
  "version": "1.0",
  "script": "owm.lua",
  "schema": {
    "type": "object",
    "properties": {
      "apiUrl": {
        "title": "API URL",
        "type": "string",
        "default": "http://api.openweathermap.org/data/2.5/"
      },
      "apiKey": {
        "title": "API key",
        "type": "string",
        "writeOnly": true
      },
      "cityId": {
        "title": "City ID",
        "type": "string"
      },
      "maxPollingDelay": {
        "title": "Minimum Call Interval in seconds",
        "type": "integer",
        "default": 600,
        "minimum": 0,
        "maximum": 86400
      }
    }
  }
}