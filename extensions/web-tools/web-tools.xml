<app-page id="tools" title="Tools" hide-class="hideTop">
  <page-article>
    <p>Actions</p>
    <button v-on:click="gc()"><i class="fa fa-trash"></i>&nbsp;Collect Garbage</button>
    <button v-on:click="pollThings()"><i class="far fa-bell"></i>&nbsp;Poll Things</button>
    <button v-on:click="refreshThings()"><i class="fas fa-recycle"></i>&nbsp;Refresh Things</button>
    <button v-on:click="clearCache()"><i class="fas fa-broom"></i>&nbsp;Clear Cache</button>
    <p>Log Level</p>
    <select v-model="logLevel" v-on:change="applyLogLevel">
      <option value="error">Error</option>
      <option value="warn">Warning</option>
      <option value="info">Information</option>
      <option value="config">Configuration</option>
      <option value="fine">Fine</option>
      <option value="finer">Finer</option>
      <option value="finest">Finest</option>
      <option value="debug">Debug</option>
      <option value="all">All</option>
    </select>
    <p>Engine</p>
    <button v-on:click="stopServer"><i class="fas fa-power-off"></i>&nbsp;Stop the Engine</button>
    <button v-on:click="restartServer"><i class="fas fa-redo"></i>&nbsp;Restart the Engine</button>
    <button v-on:click="rebootServer"><i class="fas fa-redo"></i>&nbsp;Reboot the Engine process</button>
    <p>Advanced</p>
    <button v-on:click="reloadExtensions"><i class="fas fa-redo"></i>&nbsp;Reload the Extensions</button>
    <button v-on:click="reloadScripts"><i class="fas fa-redo"></i>&nbsp;Reload the Scripts</button>
    <button v-on:click="saveConfig"><i class="far fa-save"></i>&nbsp;Save Configuration</button>
    <button v-on:click="saveData"><i class="far fa-save"></i>&nbsp;Save Data</button>
    <p>Lua</p>
    <textarea ref="lua" v-model="lua" spellcheck="false" rows="12" wrap="off" style="width: 100%; resize: none;" placeholder="Enter your Lua code here"></textarea>
    <button v-on:click="execute"><i class="fas fa-redo"></i>&nbsp;Execute</button>
    <textarea v-model="out" spellcheck="false" rows="12" wrap="off" style="width: 100%; resize: none;" placeholder="Output" readonly></textarea>
  </page-article>
</app-page>
