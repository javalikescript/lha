{
  "name": "HTTPS",
  "description": "Exposes LHA Server over HTTPS",
  "version": "1.0",
  "script": "https.lua",
  "schema": {
    "type": "object",
    "properties": {
      "address": {
        "title": "The binding address",
        "type": "string",
        "default": "::"
      },
      "port": {
        "type": "integer",
        "default": 8443,
        "minimum": 0,
        "maximum": 65535
      },
      "commonName": {
        "title": "The server common name",
        "type": "string",
        "default": "localhost"
      },
      "certificate": {
        "title": "The certificate file",
        "type": "string",
        "default": "cer.pem"
      },
      "key": {
        "title": "The key file",
        "type": "string",
        "default": "key.pem"
      },
      "credentials": {
        "title": "The credentials as name/password pairs for basic authentication",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "The user name",
              "type": "string"
            },
            "password": {
              "title": "The user password",
              "type": "string"
            }
          }
        }
      }
    }
  }
}