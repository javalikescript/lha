{
  "name": "Philips Hue",
  "description": "Philips Hue Bridge REST API",
  "version": "1.0",
  "script": "hue.lua",
  "schema": {
    "type": "object",
    "properties": {
      "url": {
        "title": "Bridge API URL",
        "pattern": "^https?://.+/api$",
        "type": "string",
        "required": true
      },
      "user": {
        "title": "Bridge API username",
        "type": "string",
        "writeOnly": true,
        "required": true
      }
    }
  }
}