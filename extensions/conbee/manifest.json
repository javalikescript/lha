{
  "name": "ConBee",
  "description": "Dresden elektronik ConBee REST API",
  "version": "1.0",
  "script": "../hue/hue.lua",
  "schema": {
    "type": "object",
    "properties": {
      "url": {
        "title": "Bridge API URL",
        "pattern": "^https?://.+$",
        "type": "string"
      },
      "user": {
        "title": "Bridge API username",
        "type": "string",
        "writeOnly": true
      },
      "useWebSocket": {
        "title": "Enable WebSocket",
        "type": "boolean",
        "default": true
      }
    }
  }
}