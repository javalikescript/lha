{
  "name": "ConBee",
  "description": "Dresden elektronik ConBee REST API - Deprecated, please use ConBee II",
  "version": "1.0",
  "script": "../hue/hue.lua",
  "schema": {
    "type": "object",
    "properties": {
      "url": {
        "title": "Bridge API URL",
        "pattern": "^https?://.+/api$",
        "type": "string",
        "required": true
      },
      "user": {
        "title": "Bridge API username",
        "type": "string",
        "writeOnly": true,
        "required": true
      },
      "useWebSocket": {
        "title": "Enable WebSocket",
        "type": "boolean",
        "default": true
      }
    }
  }
}