{
  "name": "Web Base",
  "description": "Exposes web base content for LHA",
  "version": "1.0",
  "script": "web-base.lua",
  "config": {
    "active": true
  },
  "schema": {
    "type": "object",
    "properties": {
      "assets": {
        "title": "Static assets directory",
        "type": "string",
        "default": "assets"
      },
      "cache": {
        "title": "Cache control duration for assets, 0 to disable",
        "type": "integer",
        "default": 86400
      },
      "title": {
        "title": "Web page title",
        "type": "string",
        "default": "Home"
      },
      "theme": {
        "title": "User Interface Theme",
        "type": "string",
        "enumValues": [
          {"const": "light", "title": "Light"},
          {"const": "ms", "title": "Windows"}
        ],
        "default": "light"
      },
      "links": {
        "title": "The links",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Tile title",
              "type": "string"
            },
            "url": {
              "title": "URL",
              "type": "string"
            },
            "icon": {
              "title": "Tile icon",
              "type": "string",
              "enumValues": [
                {"const": "fa-link", "title": "Link"},
                {"const": "fa-bookmark", "title": "Bookmark"}
              ],
              "default": "fa-link"
            }
          }
        }
      }
    }
  }
}