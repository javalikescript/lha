<app-page id="settings" title="Settings" hide-class="hideTop">
  <page-article>
    <p>Actions</p>
    <button v-on:click="gc()"><i class="fa fa-trash"></i>&nbsp;Collect Garbage</button>
    <button v-on:click="pollThings()"><i class="far fa-bell"></i>&nbsp;Poll Things</button>
    <button v-on:click="clearCache()"><i class="fas fa-broom"></i>&nbsp;Clear Cache</button>
    <p>Log Level</p>
    <select v-model="logLevel" v-on:change="applyLogLevel">
      <option value="error">Error</option>
      <option value="warn">Warning</option>
      <option value="info">Information</option>
      <option value="config">Configuration</option>
      <option value="fine">Fine</option>
      <option value="finer">Finer</option>
      <option value="finest">Finest</option>
      <option value="debug">Debug</option>
      <option value="all">All</option>
    </select>
    <p>Backup and Restore</p>
    <button v-on:click="backup"><i class="fas fa-box"></i>&nbsp;Create Backup</button>
    <a v-if="filename" :href="'/engine/tmp/' + filename" download>{{filename}}</a>
    <button v-on:click="selectFile"><i class="fas fa-box-open"></i>&nbsp;Deploy Backup</button>
    <input v-on:change="uploadThenDeploy" type="file" accept=".zip" ref="uploadInput" style="display: none;" />
    <p>Engine</p>
    <button v-on:click="stopServer"><i class="fas fa-power-off"></i>&nbsp;Stop the Server</button>
    <button v-on:click="restartServer"><i class="fas fa-redo"></i>&nbsp;Restart the Server</button>
    <p>Advanced</p>
    <button v-on:click="reloadExtensions"><i class="fas fa-redo"></i>&nbsp;Reload the Extensions</button>
    <button v-on:click="reloadScripts"><i class="fas fa-redo"></i>&nbsp;Reload the Scripts</button>
    <button v-on:click="saveConfig"><i class="far fa-save"></i>&nbsp;Dump Configuration</button>
  </page-article>
</app-page>
