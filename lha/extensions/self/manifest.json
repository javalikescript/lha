{
  "name": "Lua Monitoring",
  "description": "Expose Lua engine informations",
  "version": "1.0",
  "script": "self.lua",
  "config": {
    "active": true
  },
  "schema": {
    "type": "object",
    "properties": {
      "memory": {
        "type": "object",
        "properties": {
          "enabled": {
            "title": "Generate Lua memory report",
            "type": "boolean",
            "default": true
          },
          "format": {
            "title": "Memory report format",
            "type": "string",
            "enum": [
              "csv",
              "json"
            ],
            "default": "csv"
          }
        }
      }
    }
  }
}